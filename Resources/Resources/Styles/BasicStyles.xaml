						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="3" />
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" MinWidth="10"/>
							<ColumnDefinition Width="3" />
						</Grid.ColumnDefinitions>
