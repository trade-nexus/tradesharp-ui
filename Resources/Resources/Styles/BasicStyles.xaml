				<Track.Thumb>
					<Thumb Margin="1,0,1,0" Background="{StaticResource HorizontalNormalBrush}" BorderBrush="{StaticResource HorizontalNormalBorderBrush}" Style="{StaticResource ScrollBarThumb}" />
